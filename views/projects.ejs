<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body class="bg-base-100">
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <div class="container mx-auto p-4">
    <h1 class="text-5xl font-bold mb-4">Projects</h1>
    <table class="table table-zebra w-full">
      <thead>
        <tr>
          <th>Title</th>
          <th>Sector</th>
          <th>Summary</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% projects.forEach(project => { %>
          <tr>
            <td><%= project.title %></td>
            <td>
              <% const sector = project.sector_id === 1 ? 'Land Use' : project.sector_id === 2 ? 'Industry' : project.sector_id === 3 ? 'Transportation' : 'Other'; %>
              <a class="btn btn-sm" href="/solutions/projects?sector=<%= sector %>"><%= sector %></a>
            </td>
            <td><%= project.summary_short %></td>
            <td><a class="btn btn-sm btn-primary" href="/solutions/projects/<%= project.id %>">Details</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
