<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= project.title %></title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body class="bg-base-100">
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto p-4">
    <h1 class="text-5xl font-bold mb-4"><%= project.title %></h1>
    <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded mb-4 w-full max-w-xl">
    <p class="mb-2"><%= project.intro_short %></p>
    <p class="mb-2 font-bold">Impact: <%= project.impact %></p>
    <a class="link link-primary mb-4" href="<%= project.original_source_url %>" target="_blank">View Original</a>

    <div class="bg-base-200 p-4 rounded mt-4">
      <blockquote id="quote"></blockquote>
      <p class="text-right">â€” <span id="author"></span></p>
    </div>

    <a href="#" onclick="history.back(); return false;" class="btn btn-primary mt-4">Go Back</a>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch('https://dummyjson.com/quotes/random')
        .then(res => res.json())
        .then(data => {
          document.getElementById('quote').textContent = data.quote;
          document.getElementById('author').textContent = data.author;
        });
    });
  </script>
</body>
</html>
